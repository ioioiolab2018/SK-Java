<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.put.poznan.sk.irc.controllers.T1Controller">
    <children>
      <HBox alignment="CENTER">
         <children>
            <Label text="Ustawienia" textFill="#707070">
               <font>
                  <Font name="Segoe UI Bold" size="28.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
        <VBox prefWidth="100.0" spacing="8.0">
            <children>
                <Label text="Nazwa użytkownika:" textFill="#707070">
                    <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="name_input" prefWidth="180.0">
                    <VBox.margin>
                        <Insets left="5.0" />
                    </VBox.margin>
            </TextField>
            </children>
        </VBox>
      <VBox prefWidth="100.0" spacing="8.0">
         <children>
            <Label text="Adres serwera:" textFill="#707070">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="host_address_input" prefWidth="180.0">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="200.0" spacing="10.0">
